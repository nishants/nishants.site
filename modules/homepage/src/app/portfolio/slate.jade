ul.tags
  li(ng-repeat='tag in tags.list', ng-class="{'selected': tag.selected}")
    .tag
      label(ng-bind='tag.name')
    span.status.selected(ng-click="tags.remove($index)")
      .fa.fa-check
    span.status(ng-click="tags.remove($index)")
      .fa.fa-remove

ul.deck.grid(ng-class="{'focus' : deck._current != -1}")
  include ../components/deck/deck
.modal(ng-controller='modalController')
  include modal/modal