{
  "name": "nishants.site",
  "private": true,
  "version": "0.0.0",
  "description": "A homepage for Work Life",
  "repository": "",
  "license": "WTFPL",
  "devDependencies": {
    "bower": "^1.7.7",
    "browserify": "^14.0.0",
    "cpy-cli": "^1.0.1",
    "eslint": "^3.14.1",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1",
    "uglify-js": "^2.7.5",
    "watch": "^1.0.1",
    "watch-run": "^1.2.5",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "lint": "eslint src; exit 0",
    "scss": "scss src/index.scss:../../public/homepage/index.css",
    "scss-dev": "watch 'scss --watch src/index.scss:../../public/homepage/index.css' src",
    "jade": "jade --pretty src/index.jade -o ../../public/homepage",
    "jade-dev": "jade --watch --pretty src/index.jade -o ../../public/homepage",
    "js-dev": "browserify src/index.js -o ../../public/homepage/index.js",
    "js": "browserify src/index.js | uglifyjs > ../../public/homepage/index.js",

    "compile-loader": "scss src/app/loader/loader.scss:src/app/loader/loader.css",

    "compile": " npm run compile-loader && npm run js-dev && npm run scss && npm run jade && npm run copy-public",
    "package": " npm run compile-loader && npm run test-once && npm run js && npm run lint && npm run scss && npm run jade && npm run copy-public",
    "test": "karma start karma.conf.js",
    "test-once": "karma start karma.conf.js --single-run",
    "start": "http-server -a localhost -p 8000 -c-1 ./dist",
    "watch": "watch-run -p 'src/**' npm run package",

    "copy-public": "cp -r public ../../public",
    "dev": "npm run js-dev && npm run scss && npm run jade"
  }
}
