ul.deck(ng-class="{'focus' : deck.current != -1}")
  li(ng-repeat="card in deck.list", ng-class="{'selected' : deck.current == $index, 'selected-head' : deck.current < $index - 1, 'selected-tail' : deck.current > $index + 1, 'selected-pre' : deck.current == $index - 1,'selected-post' : deck.current == $index + 1}")
    a.card(ng-click="deck.current = deck.current == $index ? -1 : $index")
      include card
